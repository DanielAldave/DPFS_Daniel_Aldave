    <main>
        <!-- indice -->
        <div class="indice-div">
            <ul class="indice">
                <a href=""><li>Inicio ></li></a>
                <a href=""><li>Mi cuenta ></li></a>
                <a href=""><li>Registro</li></a>
            </ul>
        </div>
        <!-- Crear cuenta -->
        <h2 class="crear-cuenta">Crear cuenta</h2>
        <p class="parafo-crear-cuenta">Compra más rapido y llevá el control de tus pedidos, ¡en un solo lugar!</p>
        <form class="registro" action="">
            <label for="nombre-apellido">Nombre y apellido</label>
            <input type="text" name="Nombre y apellido" id="nombre-apellido" placeholder="ej: Ana Moreno" required>
            <label for="email">Email</label>
            <input type="text" name="" placeholder="anamoreno@gmail.com" id="email" required>
            <label for="telefono">Telefono</label>
            <input type="tel" name="" id="" placeholder="ej: 5422122122122" required>
            <label for="password">Contraseña</label>
            <input type="password" name="" id="password" placeholder="contraseña" required>
            <label for="password">Confirmar contraseña</label>
            <input type="password" name="" id="password" placeholder="repetir contraseña" required>
            
            <button type="submit" class="btn-crear-cuenta">Crear cuenta</button>
        </form>
        <p class="ya-tienes-cuenta">¿Ya tenés una cuenta? <a href="#">Iniciá sesión</a></p>  
    </main>
