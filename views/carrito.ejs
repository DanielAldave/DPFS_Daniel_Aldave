        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->
        
        <title>El Rey de los Pantalones</title>
    </head>
<body>
    <header>
        <!-- Cabezal de la pagina -->
        <div class="top-bar">
            <!-- div del logo -->
            <div class="logo">
                <img src="../public/img/logo_2.png" alt="Logo el rey de los pantalones">
            </div>
            <!-- Barra de busqueda -->
            <form class=search-box action="search-box" role="search">
                <span class="search-icon material-symbols-outlined">search</span>
                <input class="search-input" type="text" name="" id="search" placeholder="¿Que estás buscando?" >
            </form>
            <!-- menu de usuario -->
            <nav class="user-menu">
                <ul class="user-menu-list">
                    <a href=""><li><i class="ri-user-fill"></i><span>Iniciar Sesion / Resgistrarse</span></li></a>
                    <a href=""><li><i class="ri-shopping-bag-fill"></i> <span>Carrito de compras</span></li></a>
                </ul>
            </nav>    
        </div>
        <!-- barra de categorias -->
        <nav class="main-menu">
            <ul class="main-menu-list">
                <a href="#" class="active"><li>Inicio</li></a>
                <a href="#"><li>Trajes</li></a>
                <a href="#"><li>Sacos</li></a>
                <a href="#"><li>Chalecos</li></a>
                <a href="#"><li>Camisas</li></a>
                <a href="#"><li>Pantalones</li></a>
                <a href="#"><li>SALE</li></a>
            </ul>
        </nav>
    </header>
    <!-- js link -->
    <script type="text/javascript" src="js/script.js"></script>

    <main>  
        <!-- indice -->
        <div class="indice-div">
            <ul class="indice">
                <a href=""><li>Entrega ></li></a>
                <a href=""><li>Pago</li></a>
            </ul>
        </div>
        <!-- datos de contacto -->
        <div class="datos-contacto"> 
            <h2>Datos de contacto</h2>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" placeholder="Ingrese su email">
            <div>
                <input type="checkbox" id="newsletter" name="newsletter">
                <label for="newsletter">Quiero recibir ofertas y novedades por e-mail</label>
            </div>
        </div>
    <div class="detalle-entrega">
        <!-- entrega -->
        <div class="entrega">
            <h2>Entrega <a href="#" class="cambiar-cp">Cambiar CP 1757</a></h2>
    
            <!-- Envío a domicilio -->
            <div class="opcion-entrega">
                <input type="radio" id="envio-domicilio" name="entrega" value="envio-domicilio">
                <label for="envio-domicilio">
                    <strong>Paqueteria de envio</strong>
                    <p>Llega entre viernes 18/04 y jueves 24/04</p>
                </label>
                <span class="precio">$ 5.914,00</span>
            </div>
    
            <!-- Retirar por -->
            <h3>Retirar por</h3>
            <div class="opcion-entrega">
                <input type="radio" id="punto-retiro" name="entrega" value="punto-retiro">
                <label for="punto-retiro">
                    <strong>Punto de retiro</strong>
                </label>
                <div class="detalle-entrega">
                    <select>
                        <option>Local 1</option>
                    </select>
                    <p>Retirás entre el viernes 18/04 y el jueves 24/04</p>
                    <ul>
                        <li>Lunes a viernes, de 11:00 a 18:00</li>
                    </ul>
                </div>
                <span class="precio">$ 3.695,00</span>
            </div>
        </div>
        <div class="datos-facturacion">
            <h2>DATOS DE FACTURACIÓN</h2>
        
            <!-- País -->
            <label for="pais">País</label>
            <select id="pais" name="pais" required>
                <option value="argentina">Argentina</option>
                <option value="brasil">Brasil</option>
                <option value="chile">Chile</option>
                <option value="uruguay">Uruguay</option>
            </select>
        
            <!-- DNI o CUIT -->
            <label for="dni-cuit">DNI o CUIT</label>
            <input type="text" id="dni-cuit" name="dni-cuit" placeholder="DNI" required>
        
            <!-- Persona que pagará el pedido -->
            <h3>Persona que pagará el pedido</h3>
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Nombre" required>
        
            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" name="apellido" placeholder="Apellido" required>
        
            <label for="telefono">Teléfono</label>
            <input type="tel" id="telefono" name="telefono" placeholder="Celular" required>
        
            <!-- Otra persona va a retirar el pedido -->
            <div class="otra-persona">
                <input type="checkbox" id="otra-persona" name="otra-persona">
                <label for="otra-persona">Otra persona va a retirar el pedido</label>
            </div>
        
            <!-- Botón continuar -->
            <button type="submit" class="btn-continuar">Continuar para el pago</button>
        </div>
    </div>
    <div class="detalle-producto">
        <img src="ruta-de-la-imagen.jpg" alt="Remeron Negro">
        <div class="info">
            <p>Remeron Negro (Negro, S) × 1</p>
            <span class="subtotal">$ 20.250,00</span>
        </div>
    </div>
    
    <div class="resumen-compra">
        <p>Subtotal <span class="precio">$ 20.250,00</span></p>
        <p>Costo de envío <span class="precio">$ 3.695,00</span></p>
        <h3>Total <span class="precio-total">$ 23.945,00</span></h3>
        <a href="#" class="agregar-cupon">Agregar cupón de descuento</a>
    </div>
    </main>
        <!-- Empieza el footer de la pagina -->
        <%- include('partials/footer.ejs') %>
