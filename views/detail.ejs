        <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->
        
    
        <title>El Rey de los Pantalones</title>
    </head>
<body>
    <header>
        <!-- Cabezal de la pagina -->
        <div class="top-bar">
            <!-- div del logo -->
            <div class="logo">
                <a href="/"><img src="/img/logo_2.png" alt="Logo el rey de los pantalones"></a>
            </div>
            <!-- Barra de busqueda -->
            <form class=search-box action="search-box" role="search">
                <span class="search-icon material-symbols-outlined">search</span>
                <input class="search-input" type="text" name="" id="search" placeholder="¿Que estás buscando?" >
            </form>
            <!-- menu de usuario -->
            <nav class="user-menu">
                <ul class="user-menu-list">
                    <a href="/login"><li><i class="ri-user-fill"></i><span>Iniciar Sesion / Resgistrarse</span></li></a>
                    <a href="/carrito"><li><i class="ri-shopping-bag-fill"></i> <span>Carrito de compras</span></li></a>
                </ul>
            </nav>    
        </div>
        <!-- barra de categorias -->
        <nav class="main-menu">
            <ul class="main-menu-list">
                <a href="#" class="active"><li>Inicio</li></a>
                <a href="#"><li>Trajes</li></a>
                <a href="#"><li>Sacos</li></a>
                <a href="#"><li>Chalecos</li></a>
                <a href="#"><li>Camisas</li></a>
                <a href="#"><li>Pantalones</li></a>
                <a href="#"><li>SALE</li></a>
            </ul>
        </nav>
    </header>
    <!-- js link -->
    <script type="text/javascript" src="js/script.js"></script>
<% if (modelFound) { %>
    <main>
        <!-- indice -->
        <div class="indice-div">
            <ul class="indice">
                <a href=""><li>Inicio ></li></a>
                <a href=""><li>camisas ></li></a>
                <a href=""><li>Camisa Blanca</li></a>
            </ul>
        </div>
            <!-- Contenido del producto -->
            <div class="producto-container">
                <!-- Galería de imágenes -->
                <div class="producto-galeria">
                    <div class="miniaturas">
                        <img src="/img/products/img_default.jpg" alt="Miniatura 1">
                        <img src="/img/products/img_default.jpg" alt="Miniatura 2">
                        <img src="/img/products/img_default.jpg" alt="Miniatura 3">
                        <img src="/img/products/img_default.jpg" alt="Miniatura 4">
                    </div>
                    <div class="imagen-principal">
                        <img src="/img/products/<%= modelFound.image %>" alt="<%= modelFound.name %>">
                    </div>
                </div>
        
                <!-- Información del producto -->
                <div class="producto-info">
                    <h1><%= modelFound.name %></h1>
                    <p class="precio-descuento">$<%= modelFound.price %>,00 </p>
                    <a href="#" class="ver-mas">Ver más detalles</a>
                    <button class="btn-agregar">Agregar al carrito</button>
                    <!-- <div class="talles">
                        <p>Talle: <span><%= modelFound.talle %></span></p>
                    </div>
        -->

                    <form action="/producto/delete/<%= modelFound.id %>?_method=DELETE" method="post">
                            <button class="delete-product"><i class="fa-solid fa-trash">Eliminar<i></button>
                    </form>
        
                    <div class="beneficios">
                        <p><i class="ri-shield-check-line"></i> Compra protegida</p>
                        <p><i class="ri-arrow-go-back-line"></i> Cambios y devoluciones</p>
                    </div>
        
                    <div class="envio">
                        <p>Medios de envío</p>
                        <input type="text" placeholder="Tu código postal">
                        <button>Calcular</button>
                        <a href="#">No sé mi código postal</a>
                    </div>
                </div>
            </div>
        
            <!-- Descripción -->
            <div class="descripcion">
                <h2>Descripción</h2>
                <p><%= modelFound.description %></p>
            </div>
        </main>
        <% } %>
    </main>
        <!-- Empieza el footer de la pagina -->
        <%- include('partials/footer.ejs') %>
    <!-- scripts -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
