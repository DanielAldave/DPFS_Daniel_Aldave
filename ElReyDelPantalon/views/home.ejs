<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs', {style : 'general', stylemain : 'home'})  %>

<body>
    <%- include('partials/header.ejs') %> 
    <!-- js link -->
    <script type="text/javascript" src="js/script.js"></script>

    <main>
        <!-- section destacados -->
        <section aria-labelledby="productos">
            <h2 class=Title id="productos">Productos</h2>
            <div id="carouselExampleIndicators-1" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                    <li class="linea" data-target="#carouselExampleIndicators-1" data-slide-to="0" class="active"></li>
                    <li class="linea" data-target="#carouselExampleIndicators-1" data-slide-to="1"></li>
                    <li class="linea" data-target="#carouselExampleIndicators-1" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <div class="w-100 caja-tarjetas" alt="First slide">
                    <% products.forEach(product => { %>
                    <a class="producto-card" href="/producto/detail/<%= product.id %>">    
                    <div class="tarjeta">
                        <img class="fotico" src="<%= product.image && product.image !== '' ? '/img/products/' + product.image : '/img/img_default.jpg' %>" alt="imagen producto">
                        <h3 class="Titulo-producto"><%= product.name %></h3>
                        <p class="precio"><%= product.price %></p>
                    </div>
                    </a>
                    <% }) %>
                    
        </section>  
        <!-- section ig -->
         <section class="ig">
            <i class="ri-instagram-line"></i>
            <p>Seguinos en @</p>
         </section>
         <!-- section newsletter -->
          <section class="newsletter">
            <h2>Newsletter</h2>
            <p>¿Queres recibir nuestras ofertas?<br>
            ¡Registrate ya mismo y comenza a disfrutarlas!</p>
            <div class="newsletter-box">
                <input type="text" placeholder="Email">
                <button>Enviar</button>
            </div>
          </section>
    </main>
        <!-- Empieza el footer de la pagina -->
    <%- include('partials/footer.ejs') %>
    <!-- scripts -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
